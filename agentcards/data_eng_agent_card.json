        "parameters": [
          "target_name",
          "target_type",
          "location",
          "format_type",
          "sla_requirements",
          "access_patterns"
        ],
        "output": "data_target_specification"
      },
      {
        "tool_name": "capture_nfrs",
        "tool_type": "requirements_capture",
        "description": "Captures non-functional requirements including performance, security, and compliance",
